# Stage 1: build the jar
FROM eclipse-temurin:17-jdk AS build
WORKDIR /app

# Copy Maven wrapper and .mvn folder
COPY mvnw ./
COPY .mvn .mvn

# Copy pom and source code
COPY pom.xml ./
COPY src ./src

# Make sure wrapper is executable
RUN chmod +x mvnw

# Build the jar
RUN ./mvnw clean package -DskipTests

# Stage 2: run the jar
FROM eclipse-temurin:17-jdk
WORKDIR /app

# Copy the built jar from stage 1
COPY --from=build /app/target/01-Blog-0.0.1-SNAPSHOT.jar app.jar

# Expose backend port
EXPOSE 8080

# Run the jar
CMD ["java", "-jar", "/app/app.jar"]
